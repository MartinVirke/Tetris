<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<Pane fx:id="rootPane" prefHeight="500.0" prefWidth="455.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <children>
      <BorderPane fx:id="goMenu" layoutX="97.0" layoutY="158.0" prefHeight="180.0" prefWidth="250.0" visible="false">
         <top>
            <Label text="Game over! &#10;Enter your name!" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <TextField fx:id="goField" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <Button fx:id="goBtn" mnemonicParsing="false" text="Submit highscore" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
      <BorderPane fx:id="hsMenu" layoutX="65.0" layoutY="62.0" prefHeight="376.0" prefWidth="327.0" visible="false">
         <bottom>
            <Button fx:id="hsBtn" mnemonicParsing="false" text="Close" BorderPane.alignment="BOTTOM_RIGHT" />
         </bottom>
         <center>
            <Label fx:id="hsLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="382.0" prefWidth="327.0" text="Label" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Impact" size="32.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
      <VBox fx:id="vBox1">
         <children>
            <HBox fx:id="hBox1">
               <children>
                  <Canvas fx:id="nextBlockCanvas" height="100.0" width="100.0" HBox.hgrow="ALWAYS" />
                  <StackPane prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <Canvas fx:id="blockCanvas" height="500.0" width="250.0" />
                        <Canvas fx:id="bgCanvas" height="500.0" width="250.0" />
                     </children>
                  </StackPane>
                  <Label fx:id="scoreLabel" contentDisplay="CENTER" text="Label" textFill="#0022ff" textOverrun="CLIP" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Impact" size="24.0" />
                     </font>
                     <effect>
                        <Reflection bottomOpacity="0.08" fraction="1.0" topOpacity="0.32" />
                     </effect>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox fx:id="pauseMenu" layoutX="80.0" layoutY="80.0" prefHeight="338.0" prefWidth="300.0" visible="false">
         <children>
            <Button fx:id="resumeBtn" mnemonicParsing="false" text="Resume" />
            <Button fx:id="newGameBtn" mnemonicParsing="false" text="New game" />
            <Button fx:id="loadBtn" mnemonicParsing="false" text="Load" />
            <Button fx:id="saveBtn" mnemonicParsing="false" text="Save" />
            <Button fx:id="highscoresBtn" mnemonicParsing="false" text="Highscores" />
            <Button fx:id="exitBtn" mnemonicParsing="false" text="Exit" />
         </children>
      </VBox>
   </children>
</Pane>
